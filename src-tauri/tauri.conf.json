{
    "build": {
        "beforeDevCommand": "yarn dev",
        "beforeBuildCommand": "yarn build",
        "devPath": "http://localhost:1420",
        "distDir": "../dist",
        "withGlobalTauri": false
    },
    "package": {
        "productName": "1024回家",
        "version": "0.0.1"
    },
    "tauri": {
        "allowlist": {
            "all": true,
            "http": {
                "scope": ["http://**", "https://**"]
            },
            "shell": {
                "all": false,
                "open": true
            },
            "dialog": {
                "all": true,
                "open": true,
                "save": true
            }
        },
        "bundle": {
            "active": true,
            "icon": [
              "icons/32x32.png",
              "icons/128x128.png",
              "icons/128x128@2x.png",
              "icons/icon.icns",
              "icons/icon.ico"
            ],
            "identifier": "com.desk1024.dev",
            "targets": "all",
            "shortDescription": "这里总有你想看的吧",
            "longDescription": "只要有1024回家在，就能帮你找到回家的路。",
            "windows": {
                "webviewInstallMode": {
                    "type": "embedBootstrapper"
                },
                "wix": {
                    "language": "zh-CN"
                }
            }
        },
        "security": {
            "csp": null
        },
        "updater": {
            "active": false
        },
        "windows": [
            {
                "label": "我自己的软件",
                "title": "百度一下",
                "url": "https://www.baidu.com/"
            }
        ]
    }
}
